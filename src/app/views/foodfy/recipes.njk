        <div class="modal-content"> <div class="modal-imagem"> <img src="" alt="" class="modal-imagem"> </div> <div
        class="modal-titulo"> <p></p> </div> <div class="modal-autor"> <p></p> </div> </div> </div> -->
        <script src="/js/recipesid.js"></script>
    </div>
{% endblock %}