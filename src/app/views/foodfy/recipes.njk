{% extends "foodfy/layout.njk" %}
{% block header %}
    <title>Foodfy - Receitas</title>
{% endblock %}
{% block content %}
    <div class="search-recipes">
        <form action="/search" method="get">
            <input type="text" name="filter" placeholder="Filtrar por nome" value="{{ filter }}">
                <button type="submit">filtrar</button>
            </form>
        </div>
        <div class="recipes-container">
            <div class="receitas">
                {% for receitas in itemsreceitas %}
                    <div class="receita" id="{{ receitas.id }}">
                        <div class="imagem-receita">
                            <img src="/img/{{ receitas.image }}" alt=""></div>
                            <div class="titulo-receita">
                                <p>{{ receitas.title }}</p>
                            </div>
                            <div class="autor-receita">
                                <p>por {{ receitas.author }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
