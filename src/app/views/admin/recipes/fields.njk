<div class="item">
    <div>imagem da receita</div>
    <input type="text" name="image" value="{{recipe.image}}">
    <div>Titulo</div>
    <input type="text" name="title" value="{{recipe.title}}">
       <div>Autor</div>
        <div>
        <select name="chef_id">
            {% for chef in chefsOptions %}
            <option value="{{chef.id}}" {% if recipe.chef_id == chef.id %} selected
            {% endif %}>{{chef.name}}</option>
            {% endfor %}
        </select>
    </div>
</div>
<div class="item">
    <div>Ingredientes</div>
    <div id="ingredients">
        {% if recipe.ingredients %}
            {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input type="text" name="ingredients[]" value="{{ingredient}}">
                </div>
            {% endfor %}
        {% else %}
                <div class="ingredient">
                    <input type="text" name="ingredients[]" value="">
                </div>
        {% endif %}
    </div>
    <button type="button" class="add-ingredients">Adicionar Ingrediente</button>
</div>
<div class="item">
    <div>Modo de preparo</div>
    <div id="steps">
    {% if recipe.preparation %}
        {% for steps in recipe.preparation %}
             <div class="step">
                 <input type="text" name="preparation[]" value="{{steps}}">
             </div>
        {% endfor %}  
    {% else %}
             <div class="step">
            <input type="text" name="preparation[]" value="">
            </div>
    {% endif %}
    </div>
    <button type="button" class="add-steps">Adicionar Novo passo</button>
</div>
<div class="item">
    <div>informações adicionais</div>
    <textarea name="information">{{recipe.information}}</textarea>
</div>
<button type="submit">Salvar Receita</button>