{% extends "admin/layout.njk" %}
{% block header %}
    <title>Foodfy - Admin - chefs</title>
{% endblock %}
{% block content %}
     <div class="chefs-container">
          <div class="botao-cadastro-chef">
             <a href="/admin/chefs/create">Criar Chefs</a>
          </div>
         
         <p class="title-manager-chefs">Gerenciar Chefs</p>
        <div class="chefs">
            {% for chef in itemschefs %}
                <div class="chef" id="{{chef.id}}">
                    <div class="avatar-chef">
                        <img src="{{chef.avatar_url}}" alt="">
                    </div>
                    <div class="name-chef">
                        <p>{{chef.name}}</p>
                    </div>
                    <div class="link-chef">
                        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
<script src="/js/recipesid-admin.js"></script>
{% endblock %}
