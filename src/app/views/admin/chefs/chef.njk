{% extends "admin/layout.njk" %}
{% block header %}
    <title>Visualizar chef - {{ chef.name }}
    </title>
{% endblock %}
{% block content %}
    <div class="chef-container-content">
        <p class="chef-view-top-label">Chef - {{ chef.name }}</p>
        <a class="chef-view-top-button" href="/admin/chefs/{{ chef.id }}/edit">Editar chef</a>
        <div class="chef-container-content-image">
            <img src="{{ chef.avatar_url }}" alt=""></div>
            <div class="chef-container-content-title">
                <p>{{ chef.name }}<p></div>
                    <div class="chef-recipes-number">
                        <p>{{ chef.total_recipes }} receitas</p>
                    </div>
                </div>
                <div class="recipes-chef-container">
                    <p class="recipes-title">Receitas</p>
                    <div class="recipes-chef">
                        {% for receitas in itemsreceitas %}
                            <div class="recipe-chef" id="{{ receitas.id }}">
                                <div class="recipe-chef-content">
                                    <div class="recipe-chef-image">
                                        <img src="/img/{{ receitas.image }}" alt="">
                                    </div>
                                    <div class="recipe-chef-info">
                                        <div class="titulo-receita">
                                            <p>{{ receitas.title }}</p>
                                        </div>
                                        <div class="autor-receita-chef">
                                            <p>por {{ receitas.author }}</p>
                                        </div>
                                        <div class="link-chef-recipe">
                                            <a href="/admin/recipes/{{ receitas.id }}">Visualizar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <script src="/js/menu.js"></script>
            {% endblock %}