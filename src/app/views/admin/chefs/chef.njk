{% extends "admin/layout.njk" %}
{% block header %}
    <title>Visualizar chef - {{chef.name}} </title>
{% endblock %}
{% block content %}
  <div class="chef-container-content">
       <p class="chef-view-top-label"> Chef-  {{chef.name}}</p>
        <a class="chef-view-top-button" href="/admin/chefs/{{chef.id}}/edit">Editar chef</a>
        <div class="chef-container-content-image"> 
          <img src="{{chef.avatar_url}}" alt="">
          </div>
        <div class="chef-container-content-title">
            <p>{{chef.name}}<p>
        </div>
        <div class="chef-recipes-number">
          <p>{{chef.total_recipes}} receitas</p>
        </div>
  </div>
     <div class="recipes-container">
        <div class="receitas">
            {% for receitas in itemsreceitas %}
                <div class="receita" id="{{receitas.id}}">
                    <div class="imagem-receita">
                        <img src="/img/{{receitas.image}}" alt="">
                    </div>
                    <div class="titulo-receita">
                        <p>{{receitas.title}}</p>
                    </div>
                    <div class="autor-receita">
                        <p>por
                            {{receitas.author}}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <script src="/js/recipesid-admin.js"></script>
{% endblock %}