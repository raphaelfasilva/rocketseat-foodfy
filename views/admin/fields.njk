<div class="item">
    <div>imagem da receita</div>
    <input type="text" name="image" value="{{recipe.image}}">
</div>
<div class="item">
    <div>Ingredientes</div>
    <div id="ingredients">
        {% if recipe.ingredients %}
            {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input type="text" name="ingredients[]" value="{{ingredient}}">
                </div>
            {% endfor %}
        {% else %}
                <div class="ingredient">
                    <input type="text" name="ingredients[]" value="">
                </div>
        {% endif %}
    </div>
    <button type="button" class="add-ingredients">Adicionar Ingrediente</button>
</div>
<div class="item">
    <div>Modo de preparo</div>
    <div id="steps">
    {% if recipe.preparation %}
        {% for steps in recipe.preparation %}
             <div class="step">
                 <input type="text" name="preparations[]" value="{{steps}}">
             </div>
        {% endfor %}  
    {% else %}
             <div class="step">
            <input type="text" name="preparations[]" value="">
            </div>
    {% endif %}
    </div>
    <button type="button" class="add-steps">Adicionar Novo passo</button>
</div>
<div class="item">
    <div>informações adicionais</div>
    <textarea name="information">{{recipe.information}}</textarea>
</div>
<script src="/js/addingredientsandsteps.js"></script>